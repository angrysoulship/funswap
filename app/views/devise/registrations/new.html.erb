
<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">

  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
      <div class="max-w-md mx-auto">
        <div class="flex items-center space-x-5">
          <div class="h-14 w-14 bg-yellow-200 rounded-full flex flex-shrink-0 justify-center items-center text-yellow-500 text-2xl font-mono">i</div>
          <div class="block pl-2 font-semibold text-xl self-start text-gray-700">
            <h2 class="leading-relaxed">Sign Up</h2>
            <p class="text-sm text-gray-500 font-normal leading-relaxed">Funswap does not keep your private information</p>
          </div>
        </div>
        <div class="divide-y divide-gray-200">
          <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-inputs">
            <%= f.input :name,
                required: true %>
            <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>

            <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="pt-4 flex items-center space-x-4">
              <button class="bg-blue-500 flex justify-center items-center w-full text-white px-4 py-3 rounded-md focus:outline-none"> <%= f.submit "Sign Up", id:"sweet-alert-demo" ,class: "btn btn-primary" %></button>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
