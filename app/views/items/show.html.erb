<div class=" relative w-screen h-screen flex justify-center">
  <div class="absolute top-14 left-20 font-sans text-gray-600 font-medium">
  <%= link_to "< Back ", collection_path(@item.collection_id)%>
  </div>
  <div class="card w-4/6 h-5/6 shadow-lg self-center justify-center">

    <div class="item-info w-11/12 h-40 flex self-center justify-center mb-3">

      <div class="item-name-type w-2/5 h-32 mx-3 my-2">

        <div class="id w-32 h-10 bg-green-500 rounded-xl flex justify-center ">
          <p class="self-center text-white">#434<%= @item.id  %></p>
        </div>

        <div class="name w-40 h-10 bg-white flex mt-3">
          <p class="self-center text-gray-700 text-lg">Name: <%= @item.name %></p>
        </div>

        <div class="type w-32 h-10 bg-white flex">
          <p class="self-center text-gray-700 text-lg">Type: <%= @item.species %></p>
        </div>

      </div>

      <div class="item-price w-2/5 h-32 my-2 ml-12">
        <div class="w-full h-1/3 flex justify-between " >
          <div class="price w-32 h-10 bg-white flex">
            <p class="self-center text-gray-700 text-xl">$ <%= @item.price %></p>
          </div>


          <% @collection = Collection.find(@item.collection_id) %>
          <% if @collection.user_id == current_user.id %>
            <div>
            </div>
          <% else %>
            <div class="pt-8">
            <%= link_to "Buy", new_collection_item_transaction_path(@item.collection_id, @item.id), class: "bg-green-500 hover:bg-green-700 rounded-xl shadow-xl font-medium text-white px-4 py-2" %>
            </div>
          <% end %>
    
        </div>

        <div class="date content-end text-gray-400 mt-2">
          <p>1 day ago</p>
        </div>

      </div>

    </div>

    <div class="item-detail w-11/12 h-96 flex self-center justify-center">

      <div class="img w-3/6 h-96 mx-4 my-3 flex justify-center">
        <img class="rounded-3xl shadow-lg object-cover h-full self-center" src="<%= @item.img_url %>" alt="">
      </div>

      <div class="description w-96 h-80 mx-4 my-3 m">

        <div class="about w-32 h-10 bg-white flex">
          <p class="self-center text-gray-700 text-xl ">About</p>
        </div>

        <div class="description-text text-gray-700 w-80 h-64 bg-white mt-4 mx-2.5 mt-1">
          <p><%= @item.description %></p>
        </div>

        <% @collection = Collection.find(@item.collection_id) %>
        <% if @collection.user_id == current_user.id %>
          <div class="text-gray-700">
            <%= link_to "Edit", edit_item_path(@item)%>
          </div>

          <div class="text-gray-700">
            <%= link_to "Delete", item_path(@item), method: :delete %>
          </div>
        <% else %>
          <div></div>
        <% end %>

      </div>
    </div>
  </div>

 </div>
