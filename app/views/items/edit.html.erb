
<div class="relative w-full grid">
  <div class="absolute top-14 left-20 font-sans text-gray-600 font-medium">
    <%= link_to "< Back ", collections_path%>
  </div>
  <div class="w-1/3 justify-self-center">
  <h1 class="text-2xl font-bold text-green-500 mb-5">Edit Item</h1>
  <%= simple_form_for([@collection, @item]) do |f| %>
  <div>
    <%= f.input :name %>
  </div>
  <div>
    <%= f.input :species %>
  </div>
  <div>
    <%= f.input :description %>
  </div>
  <div>
    <%= f.input :img_url %>
  </div>
  <div>
    <%= f.input :price %>
  </div>

    

  <div></div>
    <%= f.button :submit ,class:"bg-green-500 hover:bg-green-700 text-white rounded-xl shadow-xl px-4 py-2"%>
  <% end %> 
  </div>
</div>